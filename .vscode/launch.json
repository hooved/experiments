{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "current",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      //"env": {
          //"PYTHONPATH": "${workspaceFolder}",
      //}
    },
    {
      "name": "simo_vae_trainer",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/repos/vqgan-training",
      "module": "torch.distributed.run",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,                // let the debugger attach to all torchrun workers
      "args": [
        "--nproc_per_node=1", 
        "vae_trainer.py",
        "--dataset_url", "/raid/datasets/imagenet_wds/n03733281_train.tar",
        "--test_dataset_url", "/raid/datasets/imagenet_wds/n03733281_val.tar",
        "--batch_size=4",
      ],
      "preLaunchTask": "shuffle-cuda",
      "envFile": "${workspaceFolder}/.vscode/cuda.env",

      "env": {
          //"PYTHONPATH": "${workspaceFolder}/repos/",
          "WANDB_MODE": "offline",
      }
    },
    {
      "name": "ld_vae_train",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/repos/latent-diffusion",
      //"module": "torch.distributed.run",
      "program": "${workspaceFolder}/repos/latent-diffusion/main.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,
      "args": [
        "--base", "configs/autoencoder/autoencoder_kl_32x32x4.yaml",
        "-t", "--accelerator", "gpu", "--devices", "0,1,2,3",
      ],
      "preLaunchTask": "shuffle-cuda",
      "envFile": "${workspaceFolder}/.vscode/cuda.env",

      "env": {
          //"PYTHONPATH": "${workspaceFolder}/repos/",
          "WANDB_MODE": "offline",
      }
    },
    {
      "name": "vae_train",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/vae",
      "module": "torch.distributed.run",
      "console": "integratedTerminal",
      "justMyCode": false,
      "subProcess": true,                // let the debugger attach to all torchrun workers
      "args": [
        "--nproc_per_node=1", 
        "train.py",
      ],
      "preLaunchTask": "shuffle-cuda",
      "envFile": "${workspaceFolder}/.vscode/cuda.env",

      "env": {
          "TRAIN_IMG_DIR": "/raid/datasets/imagenet/train/n03733281",
          "EVAL_IMG_DIR": "/raid/datasets/imagenet/val/n03733281",
          //"PYTHONPATH": "${workspaceFolder}/repos/",
          //"WANDB_MODE": "offline",
      }
    },
  ]
}